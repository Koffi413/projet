{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p>Nom:{{' '}}{{client.getNom()|upper}}</p>
    <p>Prénom:{{' '}}{{client.getPrenom()|upper}}</p>
    <p>Email:{{' '}}{{client.getEmail()}}</p>
    <p>Adresse:{{' '}}{{client.getAdresse()}}</p>
    <p>Numéro:{{' '}}{{client.getNumero()}}</p>
    <p>Compte Crée le :{{' '}}{{client.getCréerLe()|format_datetime('full', 'medium', locale='fr')}}</p>
</div>
{% endblock %}
